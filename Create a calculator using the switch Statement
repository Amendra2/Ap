#include<iostream>
using namespace std;

int main(){
    
    char oper;
    float num1,num2;
    cout<<"Enter the operator(+,-,*,/):";
    cin>>oper;
    cout<<"Enter the number: "<<endl;
    cin>>num1>>num2;
    
    switch(oper){
    case'+':
     cout<<num1<<"+"<<num2<<"="<<num1+num2;
     break;
    case'-':
     cout<<num1<<"-"<<num2<<"="<<num1+num2;
      break;
    case'*':
     cout<<num1<<"*"<<num2<<"="<<num1+num2;
     break;
    case'/':
     cout<<num1<<"/"<<num2<<"="<<num1+num2;
     break;
     
     default:
     cout<<"This operator is not correct";
     break;
     
     
    }
    return 0;
}


output:::
Enter the operator(+,-,*,/):+
Enter the number: 
2
3
2+3=5 
